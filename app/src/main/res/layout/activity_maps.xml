<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/maplayout" />
    <include layout="@layout/hislayout" />
    <include layout="@layout/voicelayout"/>
    <include layout="@layout/imglayout" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <Button
            android:id="@+id/buttonLoc"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Teal"
            android:textColor="@color/white"
            android:text="Location"
            android:layout_marginLeft="4dp"/>

        <Button
            android:id="@+id/buttonHis"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Teal"
            android:textColor="@color/white"
            android:text="Call Logs"
            android:layout_marginLeft="4dp"/>

        <Button
            android:id="@+id/buttonAuto"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Teal"
            android:textColor="@color/white"
            android:text="Record"
            android:layout_marginLeft="4dp"/>

        <Button
            android:id="@+id/buttonImage"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Teal"
            android:textColor="@color/white"
            android:text="Camera"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

    </LinearLayout>

    <!--<include layout="@layout/batlayout"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

</RelativeLayout>

