<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_submit_otp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sveltoz.icaretrackerapp.Activity.SubmitOTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="5sp"
        android:background="@drawable/edt_text_style_with_background">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:src="@mipmap/ic_lock_black_24dp" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTextPinl"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:paddingTop="5sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentTop="true">
            <EditText
                android:id="@+id/edtOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="Enter OTP"
                android:inputType="textWebPassword"
                android:maxLength="4"
                android:gravity="center"
                android:focusable="true"
                android:background="@android:color/transparent"/>

        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnSubmitOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_style"/>

    </LinearLayout>


</RelativeLayout>
